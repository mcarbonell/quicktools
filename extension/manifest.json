{
    "manifest_version": 3,
    "name": "FastTools - Productivity Suite",
    "version": "1.0.0",
    "description": "Suite completa de herramientas de productividad - 33 herramientas para desarrolladores y profesionales",
    "permissions": [
        "activeTab",
        "storage",
        "tabCapture",
        "desktopCapture",
        "scripting",
        "notifications",
        "downloads",
        "contextMenus",
        "offscreen"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content/content-script.js"
            ],
            "css": [
                "content/content-styles.css"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "QuickTools - Abrir Herramientas",
        "default_icon": {
            "16": "icons/icon-16x16.png",
            "32": "icons/icon-32x32.png",
            "48": "icons/icon-48x48.png",
            "128": "icons/icon-128x128.png"
        }
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' https://fonts.googleapis.com 'unsafe-inline'; font-src 'self' https://fonts.gstatic.com;"
    },
    "chrome_url_overrides": {
        "newtab": "newtab/newtab.html"
    },
    "commands": {
        "quick-tools": {
            "suggested_key": {
                "default": "Ctrl+Shift+Q",
                "mac": "Command+Shift+Q"
            },
            "description": "Abrir QuickTools"
        },
        "capture-screen": {
            "suggested_key": {
                "default": "Ctrl+Shift+C",
                "mac": "Command+Shift+C"
            },
            "description": "Capturar pantalla"
        },
        "quick-notes": {
            "suggested_key": {
                "default": "Ctrl+Shift+N",
                "mac": "Command+Shift+N"
            },
            "description": "Abrir notas r√°pidas"
        }
    },
    "icons": {
        "16": "icons/icon-16x16.png",
        "32": "icons/icon-32x32.png",
        "48": "icons/icon-48x48.png",
        "128": "icons/icon-128x128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "tools/*",
                "libs/*",
                "newtab/*",
                "popup/*",
                "data/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}